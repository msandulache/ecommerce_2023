{% extends 'base.html.twig' %}

{% block title %}
    French Movies
{% endblock %}

{% block content %}

    <section id="top-rated">

        <h1 class="mb-12 mt-16 text-center font-sans text-5xl font-bold">French movies</h1>
        <div class="mx-auto grid max-w-screen-lg justify-center px-4 sm:grid-cols-2 sm:gap-4 sm:px-8 md:grid-cols-3">

            {% for movie in movies %}
                {% include 'common/_movie_card.html.twig' with movie %}
            {% endfor %}

        </div>
    </section>

{% endblock %}