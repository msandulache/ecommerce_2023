{% extends 'base.html.twig' %}

{% block title %}
    {{ movie.title }}
{% endblock %}

{% block content %}

    <section class="text-gray-700 body-font bg-white">

        <div class="container px-5 pt-12 pb-2 mx-auto">
            <div class="lg:w-4/5 mx-auto flex flex-wrap">
                <ul class="flex m-0 items-center p-0 mb-4">
                    <li class="text-left">
                        <a href="/" title="" class="cursor-pointer text-gray-400 hover:text-gray-900">
                            <svg class="block h-5 w-5 align-middle" xmlns="http://www.w3.org/2000/svg" fill="none"
                                 viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path strokeLinecap="round" strokeLinejoin="round"
                                      d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                            </svg>
                        </a>
                    </li>
                    <li class="flex items-center text-left mx-2">
                        <span class="text-sm font-normal leading-5 text-gray-400 ">/</span>
                    </li>
                    <li class="flex items-center text-left">
                        <a href="/{{ movie.category_name|lower|replace({' ': '-'}) }}" title=""
                           class="cursor-pointer text-gray-400 hover:text-gray-900">
                            <span class="">{{ movie.category_name }}</span>
                        </a>
                    </li>
                    <li class="flex items-center text-left mx-2">
                        <span class="text-sm font-normal leading-5 text-gray-400 ">/</span>
                    </li>
                    <li class="flex items-center text-left">
                        <span class="font-normal leading-5 text-gray-400 ">{{ movie.title }}</span>
                    </li>
                </ul>
            </div>
        </div>
        <div class="container px-5 pt-2 pb-16 mx-auto">
            <div class="lg:w-4/5 mx-auto flex flex-wrap">
                <img alt="ecommerce" class="object-cover object-center rounded border border-gray-200"
                     src="https://image.tmdb.org/t/p/w300/{{ movie.poster_path }}">
                <div class="lg:w-1/2 w-full lg:pl-10 lg:py-6 mt-6 lg:mt-0">
                    <h2 class="text-sm title-font text-red-600 tracking-widest">{{ movie.tagline }}</h2>
                    <h1 class="text-gray-900 text-3xl title-font font-medium mb-1">{{ movie.title }}</h1>

                    {% if movie.original_language != 'en' %}
                        <h2 class="text-sm title-font text-red-600 tracking-widest my-4">Original
                        title: {{ movie.original_title }} ({{ movie.original_language }})</h2>
                    {% endif %}

                    <div class="flex mb-4 mt-4">
                        {% include 'common/_movie_rate_stars.html.twig' with {'vote_average': movie.vote_average} %}
                        <span class="flex ml-3 pl-3 py-2">
                            {% for genre in movie.genres %}
                                <span class="inline-flex items-center rounded-md bg-red-50 px-2 py-1 text-xs font-medium text-red-600 ring-1 ring-inset ring-red-600/10">{{ genre.name }}</span>
                                &nbsp;
                            {% endfor %}
                            </span>
                    </div>
                    <div class="flex mt-6 items-center pb-5 border-b-2 border-gray-200 mb-5">
                        <div class="flex text-gray-600">
                            <span class="mr-3"><b>Vote count:</b> {{ movie.vote_count }}</span>
                        </div>
                        <div class="flex ml-6 items-center text-gray-600">
                            <span class="mr-3"><b>Release date:</b> {{ movie.release_date|date("d.m.Y") }}</span>
                        </div>
                    </div>

                    <p class="leading-loose">{{ movie.overview }}</p>

                    <form id="form-data">

                        <div class="flex mt-6 items-center">
                            <div class="flex text-red-600 text-3xl">
                                $ {{ movie.price }}
                            </div>
                        </div>

                        <div class="flex mt-6 items-center ">Qty:&nbsp;
                            <div class="flexitems-center text-gray-600">
                                <input type="text" id="amount" name="amount"
                                       class="w-full rounded-md border border-gray-200 py-2 px-4 text-sm uppercase shadow-sm outline-none focus:z-10 focus:border-blue-500 focus:ring-blue-500"
                                       value="1"/>
                            </div>
                        </div>

                        <div class="flex mt-9 items-center pb-5 mb-5">

                            <input type="hidden" value="{{ user_id }}" id="user_id" name="user_id"/>
                            <input type="hidden" value="{{ movie.title }}" id="name" name="name"/>
                            <input type="hidden" value="{{ movie.poster_path }}" id="image" name="image"/>
                            <input type="hidden" value="{{ random(250, 400) /100 }}" id="price" name="price"/>

                            {% if user_id != 0 %}
                            <button id="submit" type="button" title=""
                                    class="flex whitespace-nowrap rounded-full bg-red-600 px-6 py-2 font-medium text-white transition-all duration-200 hover:bg-red-600 hover:bg-transparent hover:text-red-600 border-red-600 border-2">
                                Buy Tickets
                            </button>
                            {% else %}

                                <div class="inline-flex items-center rounded-md bg-red-50 px-6 py-2 font-medium text-red-600 ring-1 ring-inset ring-red-600/10" role="alert">
                                    <p>Please <u><a href="/login">log in</a></u> or <u><a href="/register">register</a></u> first to buy ticktes</p>
                                </div>
                            {% endif %}

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <section id="recommendations">
        <h1 class="mb-12 text-center font-sans text-3xl font-bold">Recommendations (TODO)</h1>
        <div class="mx-auto grid max-w-screen-lg justify-center px-4 sm:grid-cols-2 sm:gap-4 sm:px-8 md:grid-cols-3">
            {% for movie in recommendations[0:3] %}
                {% include 'common/_movie_card.html.twig' with movie %}
            {% endfor %}
        </div>
    </section>

    <script>
        $(document).ready(function () {

            $("#submit").on("click", function (e) {
                if ($('#user_id').val() == '') {
                    alert('please log in first');
                } else {
                    e.preventDefault();
                    var formdata = $("#form-data").serialize() + '&submit=submit';

                    $.ajax({
                        type: 'post',
                        url: '/ajax/add_to_cart.php',
                        data: formdata,

                        success: function () {
                            console.log('added to cart successfully');
                            $("#submit").html('<i class="fas fa-shopping-cart"></i> Added to cart').prop("disabled", true);
                            location.reload();
                        }
                    });
                }
            });
        });
    </script>

{% endblock %}