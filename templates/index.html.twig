{% extends "base.html.twig" %}

{% block title %}
    Homepage
{% endblock %}

{% block content %}
    <div class="h-full container mx-auto flex items-center justify-center">
        <div class="flex flex-col items-center z-10">
            <h1 class="mx-6 mt-1 text-xl font-bold text-center text-neutral-200 text-5xl md:text-6xl sm:text-center sm:mx-0">Here a really cool title!</h1>
            <p class="text-neutral-200 text-xl font-medium w-2/3 text-center my-6">Some fancy text to invite to an event, the place of the event and the date of the event.</p>
            <div class="flex flex-col md:flex-row justify-center mt-10">
                <a href="#" class="py-2 px-8 rounded-full border-2 border-pink-500 text-white hover:bg-pink-500 text-center m-2">Tickets</a>
                <a href="#" class="py-2 px-8 rounded-full border-2 border-pink-500 text-white bg-pink-500 hover:bg-transparent text-center m-2">Coming soon</a>
            </div>
        </div>
    </div>

    <section class="">
        <h1 class="mb-12 text-center font-sans text-5xl font-bold">Now playing</h1>
        <div class="mx-auto grid max-w-screen-lg justify-center px-4 sm:grid-cols-2 sm:gap-4 sm:px-8 md:grid-cols-3">

            {% for movie in movies %}
                {% include 'common/_movie_card.html.twig' with movie %}
            {% endfor %}

        </div>
    </section>
{% endblock %}